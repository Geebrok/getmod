<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @project.image_url image__size: "thumb" %><br />
      <h3><%= @project.name %></h3>
      <h3><%= @project.title %></h3>
      <h5>Manufactured by: <%= @project.brand %></h5>
      <p><%= @project.description %></p>
      <p><%= link_to 'Add a new post', new_project_post_path(@project), class: "btn btn-default" %></p>
      <p><%= link_to 'Edit project', edit_project_path(@project), class: "btn btn-link" %></p>
      <p><%= link_to 'Projects List', projects_path, class: "btn btn-link" %></p>
    </div>    
    <div class="col-md-7 col-md-offset-1">
      <% if @posts.blank? %>
        <h3>Sorry, the owner of this project has not made any posts yet. Please check back later.</h3>
      <% else %>
        <%= @posts.each do |post| %>
          <h3><%= post.title %></h3>
          <p><%= image_tag post.image_url %></p>
          <p><%= post.body %></p>
          <%= link_to 'Edit post', '#', class: "btn btn-default" %>
          <%= link_to 'Delete post', '#', class: "btn btn-default" %><br /><hr>
        <% end %>
      <% end %>      
    </div>
  </div>
</div>